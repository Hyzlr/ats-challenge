datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model jobRole {
  id                    Int      @id @default(autoincrement())
  title                 String
  company               String
  location              String
  description           String
  responsibilities      String[]
  technicalRequirements String[]
  softSkills            String[]
  experience            String
  education             String
  additionalCriteria    Json
}